@{
    ViewData["Title"] = "Index";
}

@model VM_Product


<div class="mt-5">
    <a class="btn bg-success" asp-controller="Product" asp-action="Create">Ürün Ekle</a>
</div>


<table class="table mt-5">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">İsim</th>
            <th scope="col">Açıklama</th>
            <th scope="col">Fiyat</th>
            <th scope="col">Stok Sayısı</th>
            <th scope="col">İndirim Oranı</th>
            <th scope="col">Popülerlik</th>
            <th scope="col">URL</th>
            <th scope="col">Kategori Id</th>
            <th scope="col">Marka Id</th>
            <th scope="col">Tür Id</th>
            <th scope="col">Renk Id</th>

            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>
        </tr>
    </thead>
    <tbody>

        <tr>
            @foreach (var product in Model.Products)
            {
                <th scope="row">1</th>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price TL</td>
                <td>@product.StockQuantity</td>
                <td>@product.Discount %</td>
                <td>Evet</td>
                <td>@product.URL</td>

                <td>@product.CategoryId</td>
                <td>@product.BrandId</td>
                <td>@product.KindId</td>
                <td>@product.ColorId</td>

                <td><a> @Html.ActionLink("Sil", "Delete", new { id = product.Id }, new { @class = "btn bg-danger", onclick = "return confirm('Gerçekten silmek istiyor musunuz?')" })</a></td>
                <td><a class="btn bg-warning" asp-controller="Product" asp-action="Update">Güncelle</a></td>
            }
        </tr>


    </tbody>
</table>