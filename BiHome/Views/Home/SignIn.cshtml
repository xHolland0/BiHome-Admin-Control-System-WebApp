@{
    ViewData["Title"] = "SignIn";
}
@model VM_SignIn


<div class="col-md-4 offset-md-4">
    <h2>Giriş Yap</h2>

    <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Hata!</h4>
        <p></p>
    </div>



    <form asp-controller="Home" asp-action="SignIn" method="post">

        <div class="row mb-3">
            <label for="inputEmail3" class=" col-form-label" asp-for="Email"></label>
            <div class="col-sm-10">
                <input asp-for="Email" type="email" class="form-control" id="inputEmail3">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>


        <div class="row mb-3">
            <label for="inputPassword3" class=" col-form-label" asp-for="Password"></label>
            <div class="col-sm-10">
                <input asp-for="Password" type="password" class="form-control" id="inputPassword3">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
        </div>

        <div class="mb-3 form-check">
            <input class="form-check-input" asp-for="RememberMe" />
            <label class="from-check-label" asp-for="RememberMe">Beni Hatırla!</label>
        </div>

        <button type="submit" class="btn btn-primary">Giriş Yap</button>
    </form>
</div>